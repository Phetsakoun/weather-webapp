# Copy this to .env and fill values (NEVER commit .env with real secrets)
# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_NAME=weather_db
DATABASE_USER=root
DATABASE_PASSWORD=change_me
DATABASE_DRIVER=mysql

# API Keys (get from respective services)
TOMORROW_API_KEY=your_tomorrow_io_api_key_here
OPENWEATHER_API_KEY=your_openweathermap_api_key_here

# ML Service Configuration
ML_SERVICE_URL=http://127.0.0.1:5001

# JWT Secret (REQUIRED - generate strong random value)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_very_strong_random_secret_here_min_32_chars

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# Server Configuration
PORT=5000
NODE_ENV=development

# CORS Configuration (set to your frontend URL in production)
# Default: http://localhost:5173 (Vite dev server)
CORS_ORIGIN=http://localhost:5173

# Optional: Rate Limiting Configuration
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100
