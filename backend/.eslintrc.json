{
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "linebreak-style": "off",
    "no-console": "warn",
    "func-names": "off",
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "consistent-return": "warn",
    "no-shadow": "warn"
  },
  "ignorePatterns": ["node_modules", "dist", "build", ".vscode"]
}
